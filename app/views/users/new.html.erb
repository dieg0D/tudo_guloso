<div class="row login-screen">
  <div class="left-banner col s7">

  </div>

  <div class="container-login  col s5">
    <h1>Sign Up</h1>
    <%= form_with(model: @user, local: :true) do |f| %> 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <div class="alert-error">
        O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
      </div>
    </div>
  <% end %>

    <div class="input-field">
      <%= f.label :name %> 
      <%= f.text_field :name, class: "border-login", required: true %>
    </div>
    
    <div class="input-field">
      <%= f.label :email %> 
      <%= f.email_field :email, class: "border-login", required: true %>
    </div>
    
    <div class="input-field">
      <%= f.label :password %> 
      <%= f.password_field :password, class: "border-login", required: true %>
    </div>
    
    <div class="input-field">
      <%= f.label :password_confirmation %> 
      <%= f.password_field :password_confirmation, class: "border-login", required: true %>
    </div>
    <br/>
    <div class="actions">
      <%= f.submit "Cadastrar", class: "waves-effect waves-light btn btn-login"%>
    </div>

  <% end %>
    <br/>
      <p>já possui conta? <%= link_to " entrar no site", sign_in_path	 %></p>
  </div>
</div>