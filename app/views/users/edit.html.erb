<%= render partial: './common/header' %>
<div class="div-body">
  <div class="container">
      <h1>User Settings</h1>

      <%= form_with(model: @user, local: :true, method: :put, url: user_path(@user)) do |f| %> <% if @user.errors.any? %>
      <div id="error_explanation">
        <div class="alert-error">
          O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
        </div>
      </div>
      <% end %>
      
      <div >
        <div class="file-field input-field">
          <div class="btn btn-file waves-effect waves-light">
            <span>Browse</span>
            <%= f.file_field :profile_pic %>
          </div>

          <div class="file-path-wrapper">
            <input
              class="file-path validate border-login"
              type="text"
              placeholder="Upload file"
            />
          </div>
        </div>
      </div>
        <div class="input-field">
          <%= f.label :name %> <%= f.text_field :name, class: "border-login",
          required: true %>
        </div>

    
        <div class="input-field">
          <%= f.label :email %> <%= f.email_field :email, class: "border-login",
          required: true %>
        </div>

        <div class="input-field">
          <%= f.label :city %> <%= f.text_field :city, class: "border-login"%>
        </div>

        <div class="input-field">
          <%= f.label :street %> <%= f.text_field :street, class: "border-login"%>
        </div>

        <div class="input-field">
          <%= f.label :age %> <%= f.text_field :age, class: "datepicker", type:
          "text"%>
        </div>

      <br />
      <div class="actions">
        <%= f.submit "atualizar", class: "waves-effect waves-light btn btn-login"%>
      </div>
    
      <% end %>
  </div>
</div>

<%= render partial: './common/footer' %>
